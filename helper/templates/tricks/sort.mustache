{{>header}}
<div class="row">
  <div class="col-sm-8">
    <h2>Select a board</h2>
    <ul class="boards">
    {{#boards}}
    <li style="{{{style}}}"{{#active}} class="active"{{/active}}>
    <a href="{{id}}" class="select-board">
    {{#starred}}
    <span class="glyphicon glyphicon-star-empty"></span>
    {{/starred}}
    {{name}}
    </a>
    </li>
    {{/boards}}
    </ul>
  </div>
  <div class="col-sm-4">
    <h2>Select a list</h2>
    <ul class="nav nav-pills nav-stacked" id="lists">
      {{#lists}}
      <li>
      <a href="{{id}}" class="select-list">{{name}}</a>
      </li>
      {{/lists}}
    </ul>
  </div>
</div>
<div class="modal fade" id="sort-modal" tabindex="-1" role=dialog">
  <form>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Sort Trello list</h3>
      </div>
      <div class="modal-body">
        <table class="table highlight-th">
          <tr>
            <th>Board</th>
            <td id="board-name">{{board.name}}</td>
          </tr>
          <tr>
            <th>List name</th>
            <td id="list-name">{{list.name}}</td>
            <input type="hidden" name="list_id" id="list_id" value=""/>
          </tr>
          <tr>
            <th>Number of cards</th>
            <td id="card-count">{{list.cards}}</td>
          </tr>
          <tr>
            <th>Sort Criterion</th>
            <td>
              <select class="form-control" id="criterion" name="criterion">
                <option value="name">By card name</option>
                <option value="due">By due date</option>
                <option value="created">By date created</option>
                <option value="activity" disabled>By last activity</option>
              </select>
            </td>
          </tr>
          <tr>
            <th>Sort order</th>
            <td>
              <select class="form-control" id="order" name="order">
                <option value="asc">Ascending</option>
                <option value="desc">Descending</option>
              </select>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <div class="progress">
                <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                  
                </div>
              </div>
            </td>
          </tr>
        </table>
      </div>
      <div class="modal-footer">
        <div class="btn-group">
          <a href="#" target="trello" class="btn btn-primary undone" id="open">
            Open board in Trello
          </a>
          <button type="button" class="btn btn-inverse undone" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-success done" data-dismiss="modal">Sorted. Close window</button>
          <button type="submit" class="btn btn-danger undone">Sort cards</button>
          <button type="submit" class="btn btn-danger done">Re-sort cards</button>
        </div>
      </div>
    </div>
  </form>
</div>
